# Check if the name string appears in the sentence string in either lower, upper, or mixed case. 

def check_for_name(sentence, name): 
  # Convert the cases of both name and sentence to the same one first. 
  if name.lower() in sentence.lower(): 
    return True 
  else: 
    return False 


print(check_for_name("My name is Jamie", "Jamie"))
# should print True
print(check_for_name("My name is jamie", "Jamie"))
# should print True
print(check_for_name("My name is Samantha", "Jamie"))
# should print False